<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SelectorActivity">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/relative_layout">

        <TextView
                android:layout_width="260dp"
                android:layout_height="86dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="Selecciona el tipo de informaciÃ³n que quieres ver"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"/>
        <Button
                android:text="Personajes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_people"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="163dp"/>

        <Button
                android:text="Planetas"
                android:id="@+id/btn_planets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="259dp"/>
        <Button
                android:text="Naves Espaciales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_starships"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="350dp"/>

    </RelativeLayout>

    <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:visibility="gone"/>

</RelativeLayout>